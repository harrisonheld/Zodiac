<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE Entities [
  <!ELEMENT Entities ANY>
  
  <!ELEMENT Entity ANY>
  <!ATTLIST Entity Id ID #REQUIRED>
  <!ATTLIST Entity Inherits IDREF #IMPLIED>

  <!ELEMENT Component ANY>
  <!ATTLIST Component Type CDATA #REQUIRED>

  <!ELEMENT Property ANY>
  <!ATTLIST Property PropertyName CDATA #REQUIRED>
  <!ATTLIST Property PropertyValue CDATA #REQUIRED>
]>

<Entities>
  
  <Entity Id="PhysicalObject">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="[PhysicalObject]" />
      <Property PropertyName="Description" PropertyValue="[physical object base]" />
      <Property PropertyName="Sprite" PropertyValue="Misc/error" />
    </Component>
    <Component Type="PhysicalAttributes">
      <Property PropertyName="Solid" PropertyValue="True" />
      <Property PropertyName="OccludesVison" PropertyValue ="True" />
      <Property PropertyName="Weight" PropertyValue="1" />
    </Component>
    <Component Type="Health" />
  </Entity>

  <Entity Id="DecorationObject">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="[DecorationObject]" />
      <Property PropertyName="Description" PropertyValue="[decoration base]" />
      <Property PropertyName="Sprite" PropertyValue="Misc/error" />
    </Component>
    <Component Type="PhysicalAttributes">
      <Property PropertyName="Solid" PropertyValue="False" />
      <Property PropertyName="OccludesVison" PropertyValue ="False" />
    </Component>
    <Component Type="Health">
      <Property PropertyName="HealthMax" PropertyValue="1" />
      <Property PropertyName="HealthCurrent" PropertyValue="1" />
      <Property PropertyName="Defense" PropertyValue="0" />
    </Component>
  </Entity>

  <Entity Id="Item" Inherits="DecorationObject">
    <Component Type="Item" />
  </Entity>

  <Entity Id="Path" Inherits="DecorationObject">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="path" />
      <Property PropertyName="Description" PropertyValue="good for walking on" />
      <Property PropertyName="Sprite" PropertyValue="path" />
    </Component>
  </Entity>

  <Entity Id="Flower" Inherits="Item">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="flower" />
      <Property PropertyName="Description" PropertyValue="a single stitch in nature's tapesty, the delightful flower blooms forth from the earth with a joyous flourish" />
      <Property PropertyName="Sprite" PropertyValue="flower" />
      <Property PropertyName="ColorPrimary" PropertyValue="0.53,0.27,0.53" />
      <Property PropertyName="ColorSecondary" PropertyValue="0.66,0.82,0.25" />
      <Property PropertyName="ColorTertiary" PropertyValue="0,0.67,0.31" />
    </Component>
  </Entity>

  <Entity Id="MithrilDagger" Inherits="Item">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="mithril dagger" />
      <Property PropertyName="Description" PropertyValue="it has a slender and agile design, featuring a sharp, finely crafted blade and a hilt adorned with intricate engravings. Its overall weight is surprisingly light, allowing for swift and precise movements during combat" />
      <Property PropertyName="Sprite" PropertyValue="dagger2" />
      <Property PropertyName="ColorPrimary" PropertyValue="0.53,0.27,0.53" />
      <Property PropertyName="ColorSecondary" PropertyValue="0.66,0.82,0.25" />
      <Property PropertyName="ColorTertiary" PropertyValue="0,0.67,0.31" />
    </Component>
    <Component Type="Equippable">
      <Property PropertyName="SlotType" PropertyValue="Hand" />
    </Component>
    <Component Type="MeleeWeapon">
      <Property PropertyName="Damage" PropertyValue="2" />
      <Property PropertyName="AttackCost" PropertyValue="500" />
    </Component>
  </Entity>

  <Entity Id="Wall" Inherits="PhysicalObject">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="[Wall]" />
      <Property PropertyName="Description" PropertyValue="[wall base]" />
      <Property PropertyName="Sprite" PropertyValue="dots3x3" />
    </Component>
    <Component Type="Health">
      <Property PropertyName="HealthMax" PropertyValue="100" />
      <Property PropertyName="HealthCurrent" PropertyValue="100" />
      <Property PropertyName="Defense" PropertyValue="1" />
    </Component>
    <Component Type="PhysicalAttributes">
      <Property PropertyName="Solid" PropertyValue="True" />
      <Property PropertyName="OccludesVison" PropertyValue ="True" />
      <Property PropertyName="Weight" PropertyValue="1000" />
    </Component>
  </Entity>

  <Entity Id="LimestoneWall" Inherits="Wall">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="oolitic limestone wall" />
      <Property PropertyName="Description" PropertyValue="a sedimentary material. the oolites, which are small spherical grains of rock, appear to move and shift like a school of fish" />
      <Property PropertyName="ColorPrimary" PropertyValue="1,1,0.89" />
      <Property PropertyName="ColorSecondary" PropertyValue="0.76,0.76,0.63" />
      <Property PropertyName="ColorTertiary" PropertyValue="0,0,0" />
    </Component>
  </Entity>
  
  <Entity Id="LimestoneWallAlt" Inherits="LimestoneWall">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="sun-bleached oolitic limestone wall" />
      <Property PropertyName="Description" PropertyValue="a sedimentary material. the oolites, which are small spherical grains of rock, appear to move and shift like a school of fish. It has weathered many years of direct exposure to the sun" />
      <Property PropertyName="ColorPrimary" PropertyValue="0.99,0.99,0.92" />
      <Property PropertyName="ColorSecondary" PropertyValue="0.76,0.76,0.69" />
      <Property PropertyName="ColorTertiary" PropertyValue="0,0,0" />
      <Property PropertyName="Sprite" PropertyValue="dots2x2" />
    </Component>
  </Entity>

  <Entity Id="Creature" Inherits="PhysicalObject">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="[Creature]" />
      <Property PropertyName="Description" PropertyValue="[represents a creature]" />
    </Component>
    <Component Type="Living" />
    <Component Type="EnergyHaver" />
    <Component Type="Inventory" />
    <Component Type="Brain">
      <Property PropertyName="Ai" PropertyValue="Wanderer" />
    </Component>
    <Component Type="PhysicalAttributes">
      <Property PropertyName="OccludesVison" PropertyValue ="False" />
      <Property PropertyName="Weight" PropertyValue="150" />
    </Component>
  </Entity>

  <Entity Id="Humanoid" Inherits="Creature">
    <Component Type="Visual">
      <Property PropertyName="DisplayName" PropertyValue="[Humanoid]" />
      <Property PropertyName="Description" PropertyValue="[represents a human]" />
    </Component>
    <Component Type="Slot">
      <Property PropertyName="SlotType" PropertyValue="Hand" />
      <Property PropertyName="SpecialName" PropertyValue="Right Hand" />
    </Component>
    <Component Type="Slot">
      <Property PropertyName="SlotType" PropertyValue="Hand" />
      <Property PropertyName="SpecialName" PropertyValue="Left Hand" />
    </Component>
    <Component Type="Slot">
      <Property PropertyName="SlotType" PropertyValue="Missile" />
    </Component>
    <Component Type="Slot">
      <Property PropertyName="SlotType" PropertyValue="Head" />
    </Component>
    <Component Type="Slot">
      <Property PropertyName="SlotType" PropertyValue="Body" />
    </Component>
    <Component Type="Slot">
      <Property PropertyName="SlotType" PropertyValue="Legs" />
    </Component>
  </Entity>  
</Entities>